<div class="d-flex justify-content-center">
<h1>Sign In</h1>
</div>

<%= form_with url: sign_in_path, local: true, data: { turbo:false } do |form| %>
  <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class:"form-control", placeholder: "email@email.com" %>
  </div>

  <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class:"form-control", placeholder: "password" %>
    <%# <= link_to "Forgot your password?", password_reset_path > %>
    
  </div>

  <div class="mb-3">
       <%= form.submit "Sign in", class:"btn btn-primary" %>
  </div>

<%end%>

