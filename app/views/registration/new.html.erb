

<div class="d-flex justify-content-center">
<h1> Sign Up</h1>
</div>


<%= form_with model: @user, url: sign_up_path, local: true, data: { turbo:false }, class: "form-center"   do |form| %>
  <% if form.object.errors.any? %>  
    <div class="alert alert-danger">
      <% form.object.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>     
    </div>    
  <% end %>
  
    <div class="w-25 justify-content-center">
      <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class:"form-control", placeholder: "email@email.com" %>
      </div>
      <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class:"form-control", placeholder: "password" %>
      </div>
      <div class="mb-3">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, class:"form-control", placeholder: "password" %>
      </div>
    </div>
  
  <div class="mb-3">
  <%= form.submit "Sign up", class: "btn btn-primary" %>
  </div>
  
<% end %>

<style>
  .form-center{
    display:flex;   
    flex-direction:column;  
    align-items: center;
  }
</style>