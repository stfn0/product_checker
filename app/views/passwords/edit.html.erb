<div class="d-flex justify-content-center">
<h1> Edit Password </h1>
</div>


<%= form_with model: Current.user, url: edit_password_path, local: true, data: { turbo:false } do |form| %>

  <% if form.object.errors.any? %>  
    <div class="alert alert-danger">
      <% form.object.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>     
    </div>    
  <% end %>

  <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, required: true, class:"form-control", placeholder: "password"%>
  </div>

  <div class="mb-3">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, required: true, class:"form-control", placeholder: "password"%>
  </div>
  
  <div class="mb-3">
    <%= form.submit "Update Password", class: "btn btn-primary" %>
  </div>
  
<% end %>